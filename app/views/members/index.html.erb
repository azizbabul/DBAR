<p id="notice"><%= notice %></p>

<h1 style= "text-shadow: #6EB7FF;">Listing Members</h1>

<table width = 500px border = 5px>
  <thead>
    <tr style = "background-color:goldenrod">
      <th>Membership</th>
      <th>Name</th>
      <th>Present address</th>
      <th>District</th>
      <th>Phone</th>
     
      <th>Status</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr style = 'color:blueviolet;'>
        <td><%= member.membership_id %></td>
        <td><%= member.name %></td>
        
        <td><%= member.present_address %></td>
        <td><%= member.district %></td>
        <td><%= member.phone %></td>
        
        <td><%= member.status %></td>
        
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
<br/>
<%= will_paginate @members %>
